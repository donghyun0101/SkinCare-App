                    android:textColor="@drawable/selector_result_text"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_button_result_skinsagging"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_result_skinsagging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/jost600semi"
                    android:gravity="center"
                    android:textColor="@drawable/selector_result_text"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/selector_result_skinsagging"
                    android:textColor="@drawable/selector_result_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/jost600semi"
                    android:gravity="center"
                    android:text="@string/text_skinsagging"
                    android:textColor="@drawable/selector_result_text"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_horizontal"
        android:layout_marginStart="5dp">

        <Button
            android:id="@+id/btn_result_daily"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_trans_btn"
            android:fontFamily="@font/jost600semi"
            android:text="@string/text_skinanalysisresult"
            android:textColor="@drawable/selector_trans_btn_text"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp">

        <Button
            android:id="@+id/btn_result_recommend"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/selector_trans_btn"
            android:fontFamily="@font/jost600semi"
            android:text="@string/page_result_recommend"
            android:textColor="@drawable/selector_trans_btn_text"
            android:textSize="11sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <Button
            android:id="@+id/btn_result_start_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_trans_btn"
            android:fontFamily="@font/jost600semi"
            android:text="@string/text_startover"
            android:textColor="@drawable/selector_trans_btn_text"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_result_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <include layout="@layout/dialog_result_daily" />
    </RelativeLayout>

</RelativeLayout>