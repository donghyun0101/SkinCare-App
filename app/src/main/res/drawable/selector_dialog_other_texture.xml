<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/shape_dialog_daily_bg_true" />
            <item android:bottom="5dp" android:drawable="@drawable/icon_texture_white_32" android:left="5dp" android:right="5dp" android:top="5dp" />
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/shape_dialog_daily_bg_true" />
            <item android:bottom="5dp" android:drawable="@drawable/icon_texture_white_32" android:left="5dp" android:right="5dp" android:top="5dp" />
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/shape_dialog_daily_bg_false" />
            <item android:bottom="5dp" android:drawable="@drawable/icon_texture_dkgray_32" android:left="5dp" android:right="5dp" android:top="5dp" />
        </layer-list>
    </item>
</selector>